{% extends '@ShopsysFramework/Admin/Content/Administrator/detail.html.twig' %}

{% block title %}- {{ 'Editing administrator'|trans }} - {{ administrator.realName }}{% endblock %}
{% block h1 %}{{ 'Editing administrator'|trans }} - {{ administrator.realName }}{% endblock %}

{% block admin_log %}
    {% if lastAdminActivities|length > 0 %}
        <div class="wrap-divider">
            <h2>{{ 'Administrator activities history'|trans }}</h2>
            <table class="table-grid">
                <thead>
                    <tr class="table-grid__row">
                        <th class="table-grid__cell">
                            {{ 'Login time'|trans }}
                        </th>
                        <th class="table-grid__cell">
                            {{ 'Last action time'|trans }}
                        </th>
                        <th class="table-grid__cell">
                            {{ 'IP address'|trans }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for adminActivity in lastAdminActivities %}
                        <tr class="table-grid__row">
                            <td class="table-grid__cell">
                                {{ adminActivity.loginTime|formatDateTime }}
                            </td>
                            <td class="table-grid__cell">
                                {{ adminActivity.lastActionTime|formatDateTime }}
                            </td>
                            <td class="table-grid__cell">
                                {{ adminActivity.ipAddress }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
