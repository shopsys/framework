{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Customer user role group'|trans }}{% endblock %}
{% block h1 %}{{ 'Customer user role group'|trans }}{% endblock %}

{% block main_content %}
    <div class="wrap-divider">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
            {% block fixed_bar_content %}
                <a href="{{ url('admin_superadmin_customer_user_role_group_list') }}" class="btn-link-style">{{ 'Back to overview'|trans }}</a>
                {{ form_save(customerUserRoleGroup|default(null), form) }}
            {% endblock %}
        {% endembed %}
        {{ form_end(form) }}
    </div>

    {% block admin_log %}{% endblock %}
{% endblock %}
