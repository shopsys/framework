{% extends '@ShopsysFramework/Admin/Layout/layoutWindow.html.twig' %}

{% block content %}
    {{ form_start(quickSearchForm) }}

        <div class="in-tab margin-top-50 js-tabs">
            <div class="in-tab__heading">
                <a href="#"
                    class="in-tab__heading__item js-tabs-button active"
                    data-tab-id="quick"
                >
                    {{ 'Quick search'|trans }}
                </a>
            </div>
            <div class="in-tab__content">
                <div class="in-tab__content__in js-tabs-content" data-tab-id="quick">
                    {% include '@ShopsysFramework/Admin/Content/FilePicker/quickSearchFormContent.html.twig' with {quickSearchForm: quickSearchForm} %}
                </div>
            </div>
        </div>

        {{ gridView.render() }}
        {{ gridView.renderHiddenInputs('page') }}

    {{ form_end(quickSearchForm) }}

    {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
        {% block fixed_bar_content %}
            <a
                href="#"
                class="btn btn--small js-products-picker-close"
            >
                {{ 'Finish the assigning'|trans }}
            </a>
        {% endblock %}
    {% endembed %}
{% endblock %}
