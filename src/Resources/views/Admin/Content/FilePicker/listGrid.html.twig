{% extends '@ShopsysFramework/Admin/Grid/Grid.html.twig' %}

{% block grid_no_data %}
    {{ 'No files found.'|trans }}
{% endblock %}

{% block grid_pager_totalcount %}
    {% set entityName = 'files'|trans %}
    {{ parent() }}
{% endblock %}

{% block grid_value_cell_id_select %}
        <a
                class="js-picker-window-add-item btn btn--light btn--plus btn--small"
                href="#"
                data-picker-instance-id="{{ jsInstanceId }}"
                data-picker-id="{{ row.u.id }}"
                data-picker-name="{{ row.filename }}"
                data-picker-filename="{{ row.u.name }}"
                data-picker-names="{{ row.names|json_encode }}"
                data-picker-thumbnail="{{ uploadedFilePreview(row.uploadedFile)|escape }}"
        >
            <i class="js-picker-icon btn__icon">+</i>
            <span class="js-picker-label">
                {{ 'Add'|trans }}
            </span>
        </a>
{% endblock %}
