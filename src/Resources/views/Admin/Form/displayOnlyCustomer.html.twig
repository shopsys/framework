{% block display_only_customer_widget %}
    <div class="form-line__side">
        <div class="form-line__item form-line__item--text">
            {% if user is null%}
                {{ 'unregistered customer'|trans }}
            {% else %}
                <a href="{{ path('admin_customer_edit', { id: user.id }) }}" target="_blank">
                    {% if user.customer.billingAddress.companyCustomer %}
                        {{ user.customer.billingAddress.companyName }} -
                    {% endif %}
                    {{ user.lastName }}
                    {{ user.firstName }}
                    <i class="svg svg-forward-page"></i>
                </a>
            {% endif %}
        </div>
    </div>
{% endblock display_only_customer_widget %}
