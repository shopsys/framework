{% block display_only_url_widget %}
    <div class="form-line__side">
        <div class="form-line__item form-line__item--text">

            {% if domain_id is not null %}
                {% set url = findUrlByDomainId(route, route_params, domain_id) %}
            {% else %}
                {% set url = url(route, route_params) %}
            {% endif %}

            <a href="{{ url }}" target="_blank">
                {% apply spaceless %}
                    <i class="svg svg-forward-page in-icon in-icon--link ml5 mr5"></i>
                    {% if route_label is not empty %}
                        {{ route_label }}
                    {% else %}
                        {{ url }}
                    {% endif %}
                {% endapply %}
            </a>
        </div>
    </div>
{% endblock display_only_url_widget %}
