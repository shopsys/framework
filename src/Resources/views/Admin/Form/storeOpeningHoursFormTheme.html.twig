{% block _store_form_openingHours_widget %}
    {% set dayNames = [
        'Monday'|trans,
        'Tuesday'|trans,
        'Wednesday'|trans,
        'Thursday'|trans,
        'Friday'|trans,
        'Saturday'|trans,
        'Sunday'|trans,
    ] %}

    <div class='form-line__side'>
        <div class='flex-align-center'>
            <div style="width: 100px" class='margin-5'><strong>{{ 'Day'|trans }}</strong></div>
            <div style="display: flex; padding-right: 45px; max-width: 400px" class="full-width">
                <div style="padding-left: 40px" class='full-width margin-5'><strong>{{ 'Opening time'|trans }}</strong></div>
                <div style="padding-left: 20px" class='full-width margin-5'><strong>{{ 'Closing time'|trans }}</strong></div>
            </div>
        </div>

        {% for key, openingHour in form %}
            <div class='flex-align-center'>
                <div style="width: 100px; margin-top: 0" class='full-width margin-5'>
                    <strong>{{ dayNames[key - 1] }}</strong>
                </div>
                {{ form_widget(openingHour.vars.form) }}
            </div>
        {% endfor %}
    </div>
{% endblock _store_form_openingHours_widget %}

{% block _store_form_openingHours_label %}
    <label class="form-line__label" style="float: none">
        {{ label }}
        <i class="svg svg-info in-icon cursor-help form-line__item form-line__item--info js-tooltip"
           data-toggle="tooltip" data-placement="bottom"
           title="{{ 'Enter in the store local time'|trans }}"
        ></i>
    </label>
{% endblock _store_form_openingHours_label %}

{% block _store_form_openingHours_errors %}
    <div style="position: relative; right: 20px; top: 10px">
        {{ form_errors(form) }}
    </div>
{% endblock _store_form_openingHours_errors %}
